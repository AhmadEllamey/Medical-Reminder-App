<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f5bd5"
    android:backgroundTint="#4F5BD5"
    android:rotation="-360"
    android:rotationX="-360"
    android:rotationY="-360">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="427dp"
        android:layout_height="509dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/four"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginBottom="186dp"
        android:backgroundTint="#4f5bd5"
        android:onClick="gonext"
        android:text="@string/fourtimes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/there"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/there" />

    <Button
        android:id="@+id/once"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4f5bd5"
        android:onClick="gonext"
        android:text="@string/oncedaily"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F1ECEC"
        android:textColorLink="#F3ECEC"
        app:layout_constraintBottom_toTopOf="@+id/twice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/twice"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4f5bd5"
        android:onClick="gonext"
        android:text="@string/twotimes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/there"
        app:layout_constraintEnd_toEndOf="@+id/once"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/once"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/there"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="203dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#4f5bd5"
        android:onClick="gonext"
        android:text="@string/threetimes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/four"
        app:layout_constraintEnd_toEndOf="@+id/twice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/twice"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="74dp"
        android:text="@string/everyday"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pills" />

